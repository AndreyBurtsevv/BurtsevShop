@model BrandResponse

@{
    Layout = "_Layout";
}

<!DOCTYPE html>
<html>
<head>
    <title>Edit Brand</title>

    <style>
        .error {
            color: red;
        }
    </style>
    <script src="~/js/validator.js"></script>
</head>
<body>
    <h1>Edit</h1>
    <form method="post" onsubmit="return checkForm(this)">        
            <table>
                <tr>
                    <td>ID</td>
                    <td>@Model.Id</td>
                </tr>
                <tr>
                    <td>Name</td>
                    <td><input type="text" name="Name" value="@Model.Name" id="Name" /></td>
                </tr>
                <tr>
                    <td>Description</td>
                    <td><input type="text" name="Description" value="@Model.Description" id="Description" /></td>
                </tr>
                <tr>
                    <td>
                        <input type="submit" value="Save" />
                    </td>
                </tr>
            </table>
            <p id='err_fio' class='error'></p>        
    </form>
</body>
</html>